<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >
            
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/login_photo"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:id="@+id/loginPhoto"
                android:layout_marginTop="30dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/loginEmail"
                android:layout_below="@+id/loginPhoto"
                android:hint="Email..."
                android:background="@drawable/inputs"
                android:inputType="textEmailAddress"
                android:padding="4dp"
                android:drawableStart="@drawable/ic_email_black_24dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/loginPassword"
                android:layout_below="@+id/loginEmail"
                android:hint="Password..."
                android:background="@drawable/inputs"
                android:inputType="textPassword"
                android:padding="4dp"
                android:drawableStart="@drawable/ic_lock_black_24dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"

               />

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forgetPassword"
                android:padding="4dp"

                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:text="Login"
                android:textAllCaps="false"
                android:textSize="24sp"
                android:textColor="@android:color/background_light"
                android:background="@drawable/buttons"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/forgetPassword"
                android:layout_below="@+id/loginPassword"
                android:hint="Email..."
                android:text="Forget Password ?"
                android:padding="4dp"
                android:textColor="@color/colorPrimaryDark"

                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:textAlignment="textEnd"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/needNewAccount"
                android:layout_below="@+id/btnLogin"
                android:hint="Email..."

                android:padding="4dp"
                android:textColor="@color/colorPrimaryDark"
                android:text ="Don't have an account? Create New Account"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/loginUsing"
                android:layout_below="@+id/needNewAccount"


                android:padding="4dp"
                android:textColor="@color/colorPrimaryDark"

                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/btnPhoneLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/loginUsing"
                android:padding="4dp"
                android:drawableStart="@drawable/ic_phone_android_black_24dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="17dp"
                android:text="Phone"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:background="@drawable/buttons"/>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>